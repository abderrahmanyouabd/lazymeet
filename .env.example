# ==========================================
# Lazymeet Environment Variables
# ==========================================
# Copy this file to .env.local or .env.development
# NEVER commit .env files with real values!

# -----------------------------------------
# Convex Configuration
# -----------------------------------------
# Get these from your Convex dashboard: https://dashboard.convex.dev
CONVEX_DEPLOY_KEY=your_convex_deploy_key_here
CONVEX_URL=https://your-project.convex.cloud

# -----------------------------------------
# Auth0 Configuration
# -----------------------------------------
# Get these from your Auth0 dashboard: https://manage.auth0.com
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_AUDIENCE=https://your-api-identifier

# -----------------------------------------
# WebRTC / TURN Server Configuration
# -----------------------------------------
# You can use Twilio, Xirsys, or self-hosted Coturn
TURN_SERVER_URL=turn:global.turn.twilio.com:3478?transport=udp
TURN_SERVER_USER=your_twilio_username
TURN_SERVER_PASS=your_twilio_password

# STUN servers (public, no auth required)
STUN_SERVER_URL=stun:stun.l.google.com:19302

# -----------------------------------------
# Application Configuration
# -----------------------------------------
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000
NODE_ENV=development

# JWT and Encryption (generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
ENCRYPTION_KEY=another-secure-key-for-meeting-encryption-32-chars

# -----------------------------------------
# Deployment Configuration (Optional)
# -----------------------------------------
# Vercel (Frontend deployment)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Railway (Backend deployment)
RAILWAY_TOKEN=your_railway_token_here

# -----------------------------------------
# Monitoring & Logging (Optional)
# -----------------------------------------
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Log level (debug, info, warn, error)
LOG_LEVEL=info
